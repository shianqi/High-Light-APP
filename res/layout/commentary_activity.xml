<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
                android:id="@+id/bottomTab"
                android:layout_width="fill_parent"
                android:background="#eeeeee"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_alignParentBottom="true">
            <Button
                    android:id="@+id/sendButton"
                    android:layout_alignParentRight="true"
                    android:layout_width="60dip"
                    android:background="@drawable/button_blue"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginRight="5dip"
                    android:text="发送"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_height="40dip"/>
            <EditText
                    android:id="@+id/commentary_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:maxLength="80"
                    android:minHeight="40dip"
                    android:maxHeight="60dip"
                    android:layout_centerVertical="true"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:layout_toLeftOf="@id/sendButton"/>
        </RelativeLayout>
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#dddddd"
                android:layout_above="@id/bottomTab">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/commentary_chart"
                        android:layout_width="fill_parent"
                        android:layout_height="250dip"/>
                <com.High365.HighLight.UI.NoScrollListview
                        android:id="@+id/commentary_listView"
                        android:layout_below="@id/commentary_chart"
                        android:divider="@null"
                        android:listSelector="@android:color/transparent"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>