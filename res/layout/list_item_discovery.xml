<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:paddingTop="3dip"
        android:paddingBottom="3dip">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip"
            android:paddingBottom="5dip"
            android:orientation="vertical"
            android:background="#ffffff">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <ImageView
                    android:id="@+id/user_img"
                    android:src="@drawable/ic_launcher"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            <TextView
                    android:id="@+id/discovery_username"
                    android:layout_toRightOf="@+id/user_img"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dip"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/list_item_main"
                    android:layout_below="@id/user_img"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:maxLength="140"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/list_item_time"
                    android:layout_below="@id/list_item_main"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/icon_time_2"
                    android:text=" 19:30"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/glorification"
                    android:layout_below="@id/list_item_main"
                    android:layout_alignParentRight="true"

                    android:layout_width="60dip"
                    android:layout_height="24dip"/>


            <!--<TextView-->
                    <!--android:id="@+id/list_item_share"-->
                    <!--android:text=" 分享"-->
                    <!--android:textColor="#000000"-->
                    <!--android:drawableLeft="@drawable/icon_share"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"/>-->
            <TextView
                    android:id="@+id/glorification_state"
                    android:layout_below="@id/list_item_time"
                    android:layout_marginTop="5dip"
                    android:drawableLeft="@drawable/icon_share"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>